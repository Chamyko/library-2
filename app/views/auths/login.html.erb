<h1>Users#signin,</h1>
<p>Find me in app/views/users/signin,.html.erb</p>

<div class="container col-md-offset-3">



  <div class="row col-md-6">
    <div class="legend"><legend>Log In</legend></div>
      <% if flash[:danger].present? %>
      <div class="alert alert-danger"><%flash[:danger]%></div>
        <% end %>
      <%= form_for(:user,url: very_auths_path) do |f|%>
      <div class="form-group">
        <%= f.label :email %>
        <% f.email_field :email, class: 'form-control'%>
      </div>
          <div class="form-group">
            <%= f.label :password %>
            <% f.password :password, class: 'form-control'%>
          </div>
      <br>
      <p>New User? <%= link_to "Sign up now", new_user_path %></p>
      <div class="control-group">
        <!-- Button -->
        <div class="controls text-center">
          <button class="btn btn-succes">Log In</button>
      </div>
          </div>
        <% end %>
      </div>
    </div>

